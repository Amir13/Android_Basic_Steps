<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="22dp"
        android:text="Data Management" />

    <Button
        android:id="@+id/btnPreference"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnData"
        android:layout_alignRight="@+id/btnData"
        android:layout_below="@+id/btnData"
        android:text="Preference Fragment" />

    <Button
        android:id="@+id/btnData"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:text="Data Management" />

    <Button
        android:id="@+id/btnFile"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPreference"
        android:layout_alignRight="@+id/btnPreference"
        android:layout_below="@+id/btnPreference"
        android:text="Interanl File" />

    <Button
        android:id="@+id/btnExtFile"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnFile"
        android:layout_alignRight="@+id/btnFile"
        android:layout_below="@+id/btnFile"
        android:text="External File" />

    <Button
        android:id="@+id/btnSql"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnExtFile"
        android:layout_alignRight="@+id/btnExtFile"
        android:layout_below="@+id/btnExtFile"
        android:text="SQL" />

</RelativeLayout>